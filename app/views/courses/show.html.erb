<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @course.course_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @course.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parts) %>:</strong></dt>
  <dd><%= @course.parts %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @course.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @course.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_hour) %>:</strong></dt>
  <dd><%= @course.start_hour %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @course.end_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:livestream_link) %>:</strong></dt>
  <dd><%= @course.livestream_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amazon_link) %>:</strong></dt>
  <dd><%= @course.amazon_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:studio) %>:</strong></dt>
  <dd><%= @course.studio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author_id) %>:</strong></dt>
  <dd><%= @course.author_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              courses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_course_path(@course), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              course_path(@course),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
